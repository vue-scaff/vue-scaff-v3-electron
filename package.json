{
  "name": "vue-scaff-electron",
  "author": "joenix",
  "description": "vue-scaff-electron based-on vite + vue3",
  "version": "3.0.1",
  "main": "electron/electron.js",
  "scripts": {
    "start": "scaff-electron-start",
    "build": "scaff-electron-build"
  },
  "dependencies": {
    "@scaff/vite": "^3.5.71",
    "ant-design-vue": "^3.3.0-beta.3"
  },
  "devDependencies": {
    "@scaff/electron": "^3.5.77",
    "@scaff/typescript": "^3.5.74",
    "@scaff/vite-plugin-node": "^3.5.53",
    "@vitejs/plugin-vue": "^3.0.3",
    "vite": "^3.0.7",
    "vue-tsc": "^0.40.1"
  },
  "build": {
    "appId": "com.vue-scaff.electron",
    "productName": "vue-scaff-electron",
    "copyright": "Copyright Â© 2022 ${author}",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "src/assets",
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {}
  }
}
